#  West  Europe (primary)
az  aks  get-credentials  -g archdr-rg  -n  archdr-aks
kubectl  apply -f  src/k8s/common/namespace.yaml
kubectl  create  secret generic  sql-conn  -n  archref  \
   --from-literal=server='<FAILOVER_GROUP_DNS>.database.windows.net'  \
   --from-literal=password='<sql-admin-password>'
kubectl  create  secret generic  cosmos-conn  -n  archref  \
   --from-literal=endpoint='https://<cosmos-account>.documents.azure.com:443/'  \
   --from-literal=key='<cosmos-key>'

#  North Europe  (secondary)
az  aks  get-credentials -g  archdr-rg-dr  -n  archdr-aks-dr
kubectl apply  -f  src/k8s/common/namespace.yaml
kubectl  create secret  generic  sql-conn  -n  archref \
    --from-literal=server='<FAILOVER_GROUP_DNS>.database.windows.net'  \
   --from-literal=password='<sql-admin-password>'
kubectl  create secret  generic  cosmos-conn  -n  archref \
    --from-literal=endpoint='https://<cosmos-account>.documents.azure.com:443/'  \
   --from-literal=key='<cosmos-key>'
